<Window x:Class="QLBanHang.TimKiem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLBanHang"
        mc:Ignorable="d" FontSize="16"
        Title="TimKiem" Height="201" Width="508" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="1" Grid.Row="2" Content="Nhập tên sản phẩm muốn tìm: " />
        <TextBox Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="3" Name="txtKeyword" Width="400" HorizontalAlignment="Left" Margin="5 0 0 30"/>
        <Button Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="3" Content="Tìm" Width="100" Height="30" Click="btnTim_Click" />
    </Grid>
</Window>
